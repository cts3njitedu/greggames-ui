{{#spadegame-table gameView=model renderGameView="renderGameView"}}



<div class="container playerSeatNorth">
    {{spadeplayer-seat maxTime=model.maxTime player=model.seats.PLAYERNORTH playerView=model.playerView previousTrick=model.previousTrick previousHand=model.previousHand gameNotification=model.gameNotification isTrickOver=model.trickOver isHandOver=model.handOver isGameOver=model.gameOver}}

</div>

<div class="container playerSeatWest">
    {{spadeplayer-seat maxTime=model.maxTime player=model.seats.PLAYERWEST playerView=model.playerView previousTrick=model.previousTrick previousHand=model.previousHand gameNotification=model.gameNotification isTrickOver=model.trickOver isHandOver=model.handOver isGameOver=model.gameOver}}


</div>

<div class="container playerSeatEast">
    {{spadeplayer-seat maxTime=model.maxTime player=model.seats.PLAYEREAST playerView=model.playerView previousTrick=model.previousTrick previousHand=model.previousHand gameNotification=model.gameNotification isTrickOver=model.trickOver isHandOver=model.handOver isGameOver=model.gameOver}}


</div>

<div class="container playerSeatSouth">
    {{spadeplayer-seat createPlayerView="createPlayerView" maxTime=model.maxTime player=model.seats.PLAYERSOUTH playerView=model.playerView currTurn=model.currTurn playerCard="playerCard" gameView=model previousTrick=model.previousTrick previousHand=model.previousHand gameNotification=model.gameNotification isTrickOver=model.trickOver isHandOver=model.handOver isGameOver=model.gameOver leaveGame="leaveGame"}}
    {{bidding-modal playerBid="playerBid" gameView=model player=model.seats.PLAYERSOUTH}}
    {{#if model.seats.playerSouth.error}}

    <div class="container">{{error-modal player=model.seats.playerSouth closeErrorModal="closeErrorModal"}}</div>
    {{/if}}

</div>

{{/spadegame-table}}