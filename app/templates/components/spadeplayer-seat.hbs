{{#each player.remainingCards as |card index|}}

{{#if isShowPlayerCards}}

{{!-- <img {{action "playerCard" card}} src={{image-src "/assets/images/cards/" card.name ".jpeg"}} id={{id-formatter player.name index}} class="cardSize cardDetails">  --}}
{{card-generator card=card cardName=card.name index=index playerCard="playerCard"}}
{{else}}
{{card-generator cardName="BACK_CARD" index=index}} 
{{/if}}
{{/each}}

<div class="playerPoints"><p>Player Bid: {{player.playerBid}}</p>
<p>Player Score: {{player.playerCurrentScore}}</p>
</div>
{{#if player.turn}}
<div class="circleBase playerTurn"></div>
{{/if}}

<div class="playCardDiv container">
    
    
  
    {{#if hasPlayingCard}}
    <img src={{image-src "/assets/images/cards/" displayedCard ".jpeg"}} class="playingCardSize">
    {{/if}}
 
    
</div>



